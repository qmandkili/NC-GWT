<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<div align="center">
			<g:VerticalPanel>
			    <g:HorizontalPanel verticalAlignment="middle">
					<g:Label text="Id:" />
					<g:TextBox ui:field="idTextBox" />
				</g:HorizontalPanel>
				<g:Button ui:field="getButton" text="Get" />
				<g:HorizontalPanel verticalAlignment="middle">
					<g:Label text="Name:" />
					<g:TextBox ui:field="nameTextBox" />
				</g:HorizontalPanel>
				<g:HorizontalPanel verticalAlignment="middle">
					<g:Label text="Description:" />
					<g:TextBox ui:field="descriptionTextBox" />
				</g:HorizontalPanel>
				<g:HorizontalPanel verticalAlignment="middle">
				    <g:Button ui:field="updateButton" text="Update" />
				    <g:Button ui:field="deleteButton" text="Delete" />
				    </g:HorizontalPanel>				
			</g:VerticalPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 